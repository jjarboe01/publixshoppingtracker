FROM php:8.2-apache

# Install SQLite extensions and Docker CLI
RUN apt-get update && \
    apt-get install -y libsqlite3-dev curl && \
    docker-php-ext-install pdo pdo_sqlite && \
    curl -fsSL https://get.docker.com -o get-docker.sh && \
    sh get-docker.sh && \
    rm get-docker.sh && \
    rm -rf /var/lib/apt/lists/*

# Add www-data to docker group
RUN usermod -aG docker www-data

# Enable Apache modules
RUN a2enmod rewrite

# Copy web files into the container
COPY ./web /var/www/html/

# Set proper ownership for web files
RUN chown -R www-data:www-data /var/www/html && \
    chmod -R 755 /var/www/html

# Update Apache configuration to allow access
RUN echo '<Directory /var/www/html/>\n\
    Options -Indexes +FollowSymLinks\n\
    AllowOverride All\n\
    Require all granted\n\
    DirectoryIndex index.php index.html\n\
</Directory>' >> /etc/apache2/apache2.conf

# Create entrypoint script to ensure data directory has proper permissions at runtime
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
# Create data directory if it does not exist\n\
mkdir -p /var/www/html/data\n\
\n\
# Set proper ownership and permissions for data directory\n\
chown -R www-data:www-data /var/www/html/data\n\
chmod -R 775 /var/www/html/data\n\
\n\
# Ensure database file has proper permissions if it exists\n\
if [ -f /var/www/html/data/publix_tracker.db ]; then\n\
    chown www-data:www-data /var/www/html/data/publix_tracker.db\n\
    chmod 664 /var/www/html/data/publix_tracker.db\n\
fi\n\
\n\
# Fix docker socket permissions\n\
if [ -S /var/run/docker.sock ]; then\n\
    DOCKER_SOCK_GID=$(stat -c "%g" /var/run/docker.sock)\n\
    groupmod -g $DOCKER_SOCK_GID docker 2>/dev/null || true\n\
fi\n\
\n\
# Start Apache\n\
exec apache2-foreground' > /entrypoint.sh && \
chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]

