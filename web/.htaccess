# Enable directory listing for debugging (remove in production)
Options +Indexes

# Set default character set
AddDefaultCharset UTF-8

# Allow access to PHP files
<FilesMatch "\.php$">
    Require all granted
</FilesMatch>

# Protect sensitive files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Prevent directory listing of data folder
<Directory "data">
    Options -Indexes
    Require all granted
</Directory>
